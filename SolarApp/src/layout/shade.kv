<Cell>:
    size_hint: (None, None)
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<SolarPanel>:
    size_hint: (None, None)
    canvas:
        Color:
            rgba: (0.4, 0.7, 0.9, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<ShadeDemo>:
    Label:
        text: "Shade vs. Solar Panels."
        font_size: root.height * 0.1
        size_hint: (None, None)
        size: self.texture_size
        outline_color: (0.9, 0.8, 0.0)
        outline_width: 1
        pos_hint: {"x": 0.05, "y": 0.85}
    Label:
        text: "Shade Size"
        font_size: root.height * 0.04
        size_hint: (None, None)
        size: self.texture_size
        outline_color: (0.9, 0.8, 0.0)
        outline_width: 1
        pos_hint: {"x": 0.73, "y": 0.7}
    Label:
        text: "Darkness Level"
        font_size: root.height * 0.04
        size_hint: (None, None)
        size: self.texture_size
        outline_color: (0.9, 0.8, 0.0)
        outline_width: 1
        pos_hint: {"x": 0.7, "y": 0.55}
    Label:
        text: "Voltage Output : {:.3f} V".format(float(root.output))
        font_size: root.height * 0.08
        size_hint: (None, None)
        size: self.texture_size
        outline_color: (0.5, 0.8, 0.0)
        outline_width: (10)
        pos_hint: {"x": 0.3, "y": 0.06}

<Shade>
    size_hint: (None, None)
    canvas.after:
        Color:
            rgba: [0.5 - 0.5*( self.intensity)] * 3 + [0.7]
        Rectangle:
            size: self.size
            pos: self.pos
